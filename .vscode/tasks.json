{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "typescript",
            "tsconfig": "tsconfig.json",
            "option": "watch",
            "problemMatcher": [
                "$tsc-watch"
            ],
            "group": "build",
            "label": "tsc: watch - tsconfig.json",
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "sass: watch - main.scss",
            "type": "shell",
            "command": "npx sass --watch website/style --style compressed --source-map",
            "group": "build",
            "runOptions": {
                "runOn": "folderOpen"
            }
        },
        {
            "label": "RUN THIS TASK AND ONLY THIS TASK TO BUILD THE REQUIRED FILES",
            "dependsOn": [
                "tsc: watch - tsconfig.json",
                "sass: watch - main.scss"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "runOptions": {
                "runOn": "folderOpen"
            },
            "problemMatcher": []
        }
    ]
}